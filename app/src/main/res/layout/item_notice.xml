<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutNoticeTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="@dimen/notice_text_padding_top_bottom"
        android:paddingTop="@dimen/notice_text_padding_top_bottom">

        <com.trams.joonggu_nubigo.view.customview.CustomTextViewNomal
            android:id="@+id/tvNoticeTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgNoticeOpen"
            android:layout_marginLeft="@dimen/notice_text_padding_left_right"
            android:layout_marginRight="10dp"
            android:text="title"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/imgNoticeOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/notice_close" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutNoticeContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutNoticeTitle"
        android:background="#f1f1f1">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/notice_line_view_color" />

        <com.trams.joonggu_nubigo.view.customview.CustomTextViewNomal
            android:id="@+id/tvNoticeContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/notice_text_padding_left_right"
            android:layout_marginRight="@dimen/notice_text_padding_left_right"
            android:paddingBottom="@dimen/notice_text_padding_top_bottom"
            android:paddingTop="@dimen/notice_text_padding_top_bottom"
            android:text="content"
            android:textSize="21sp" />
    </RelativeLayout>


</RelativeLayout>
