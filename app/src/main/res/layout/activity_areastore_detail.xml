<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <include
        android:id="@+id/lnlHeader"
        layout="@layout/layout_header_detail" />

    <LinearLayout
        android:id="@+id/lnlSetup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/lnlHeader"
        android:layout_weight="3">

        <LinearLayout
            android:id="@+id/lnlBasic"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/btn_select">

            <com.trams.joonggu_nubigo.view.customview.CustomTextViewNomal
                android:id="@+id/lblBasic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="기본정보"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnlAccessible"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/white">

            <com.trams.joonggu_nubigo.view.customview.CustomTextViewNomal
                android:id="@+id/lblAccessible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="편의정보"
                android:textColor="@color/color_text_nomal"
                android:textSize="21sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnlPolite"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/white">

            <com.trams.joonggu_nubigo.view.customview.CustomTextViewNomal
                android:id="@+id/lblPolite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="한줄평가"
                android:textColor="@color/color_text_nomal"
                android:textSize="21sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lnlSetup"
        android:background="@color/line" />

    <FrameLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line" />

</RelativeLayout>