<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/header_mypage_layout_all"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue">

        <RelativeLayout
            android:id="@+id/header_mypage_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_header_mypage_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/header_first_icon_margin_left"
                android:src="@drawable/mypage_header_icon" />

            <com.trams.joonggu_nubigo.view.customview.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/header_title_margin_left"
                android:layout_toRightOf="@id/img_header_mypage_icon"
                android:text="@string/fragment_mypage_header"
                android:textColor="@color/header_text_color"
                android:textSize="@dimen/header_text_size" />
        </RelativeLayout>

        <include
            android:id="@+id/header_mypage_layout_guest"
            layout="@layout/layout_area_header"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_search_height"
            android:layout_below="@id/header_mypage_layout"
            android:visibility="gone" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutLogin"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fragment_mypage_menu_height"
        android:layout_below="@id/header_mypage_layout_all">

        <com.trams.joonggu_nubigo.view.customview.CustomTextViewNomal
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fragment_mypage_menu_margin_left"
            android:text="@string/fragment_mypage_login"
            android:textColor="@color/mypage_menu_text_color"
            android:textSize="@dimen/fragment_mypage_menu_text_size" />

        <ImageView
            android:id="@+id/imgLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fragment_mypage_btn_next_margin_right"
            android:src="@drawable/mypage_btn_next" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fragment_mypage_line_view_height"
            android:layout_alignParentBottom="true"
            android:background="@color/mypage_line_view_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutScrap"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fragment_mypage_menu_height"
        android:layout_below="@id/layoutLogin">

        <com.trams.joonggu_nubigo.view.customview.CustomTextViewNomal
            android:id="@+id/tvScrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fragment_mypage_menu_margin_left"
            android:text="@string/fragment_mypage_scrap"
            android:textColor="@color/mypage_menu_text_color"
            android:textSize="@dimen/fragment_mypage_menu_text_size" />

        <ImageView
            android:id="@+id/imgScrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fragment_mypage_btn_next_margin_right"
            android:src="@drawable/mypage_btn_next" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fragment_mypage_line_view_height"
            android:layout_alignParentBottom="true"
            android:background="@color/mypage_line_view_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutNotice"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fragment_mypage_menu_height"
        android:layout_below="@id/layoutScrap">

        <com.trams.joonggu_nubigo.view.customview.CustomTextViewNomal
            android:id="@+id/tvNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fragment_mypage_menu_margin_left"
            android:text="@string/fragment_mypage_notice"
            android:textColor="@color/mypage_menu_text_color"
            android:textSize="@dimen/fragment_mypage_menu_text_size" />

        <ImageView
            android:id="@+id/imgNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fragment_mypage_btn_next_margin_right"
            android:src="@drawable/mypage_btn_next" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fragment_mypage_line_view_height"
            android:layout_alignParentBottom="true"
            android:background="@color/mypage_line_view_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutSetting"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fragment_mypage_menu_height"
        android:layout_below="@id/layoutNotice">

        <com.trams.joonggu_nubigo.view.customview.CustomTextViewNomal
            android:id="@+id/tvSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fragment_mypage_menu_margin_left"
            android:text="@string/fragment_mypage_setting"
            android:textColor="@color/mypage_menu_text_color"
            android:textSize="@dimen/fragment_mypage_menu_text_size" />

        <ImageView
            android:id="@+id/imgSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fragment_mypage_btn_next_margin_right"
            android:src="@drawable/mypage_btn_next" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fragment_mypage_line_view_height"
            android:layout_alignParentBottom="true"
            android:background="@color/mypage_line_view_color" />
    </RelativeLayout>

</RelativeLayout>
