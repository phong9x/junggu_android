<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_search_height"
    android:background="@color/color_blue">


    <RelativeLayout
        android:id="@+id/header_extension_pos2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="25dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_header_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img_center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/area_header_intro_text" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/area_header_divider" />


        <RelativeLayout
            android:id="@+id/layout_header_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_center">

            <com.trams.joonggu_nubigo.view.customview.CustomTextViewNomal
                android:id="@+id/header_let_choose_a_area_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="중구길벗 장애인자립생활센터"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@id/header_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:scaleType="center"
        android:src="@drawable/ic_header_search" />


</RelativeLayout>