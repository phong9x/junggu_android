<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/imgItemSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/accessibility_type1_normal" />

    <com.trams.joonggu_nubigo.view.customview.CustomTextViewNomal
        android:id="@+id/tvItemSettingContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgItemSetting"
        android:layout_toLeftOf="@+id/cbItemSetting"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:textColor="#444444"
        android:textSize="21sp"
        android:maxLines="1" />

    <CheckBox
        android:id="@+id/cbItemSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:button="@drawable/cb_setting_selector"
        android:checked="true" />


</RelativeLayout>
